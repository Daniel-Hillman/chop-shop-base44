{
  "name": "myapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:production": "NODE_ENV=production vite build",
    "build:analyze": "npm run build:production && npm run analyze:bundle",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:waveform": "node scripts/run-waveform-tests.js",
    "test:waveform:e2e": "vitest run src/components/waveform/__tests__/WaveformWorkflow.e2e.test.js",
    "test:waveform:performance": "vitest run src/components/waveform/__tests__/WaveformPerformance.benchmark.test.js",
    "test:waveform:browser": "vitest run src/components/waveform/__tests__/WaveformCrossBrowser.test.js",
    "test:waveform:ux": "vitest run src/components/waveform/__tests__/WaveformUserAcceptance.test.js",
    "test:waveform:validation": "vitest run src/components/waveform/__tests__/WaveformValidation.comprehensive.test.js",
    "deploy": "node scripts/deploy-production.js",
    "deploy:staging": "NODE_ENV=staging node scripts/deploy-production.js",
    "analyze:bundle": "npx vite-bundle-analyzer dist",
    "preload:waveform": "node -e \"import('./src/components/waveform/WaveformLazyLoader.jsx').then(m => m.preloadWaveformComponents())\"",
    "optimize:production": "npm run build:production && npm run analyze:bundle"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "firebase": "^10.12.2",
    "firebase-functions": "^5.0.1",
    "firebaseui": "^6.1.0",
    "framer-motion": "^11.2.10",
    "lucide-react": "^0.536.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.23.1",
    "react-youtube": "^10.1.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "firebase-tools": "^14.12.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "terser": "^5.43.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
